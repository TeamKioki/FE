<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.umc6th.kioki.join.PermissionBottomSheet">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="이용약관에 동의하시면\n키오스크 연습을 시작할 수 있어요"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#F6F6F6"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkAll"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/checkbox_background"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:paddingTop="23dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:paddingBottom="23dp"
                    android:text="모두 동의하기"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check1"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="31dp"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"/>

                <TextView
                    android:id="@+id/permission1"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:text="서비스 이용약관 동의"
                    android:textColor="@color/gray800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="(필수)"
                    android:textColor="@color/gray800"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="31dp"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"/>

                <TextView
                    android:id="@+id/permission2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginStart="9dp"
                    android:text="위치기반 서비스 이용악관 동의"
                    android:textColor="@color/gray800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="(필수)"
                    android:textColor="@color/gray800"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check3"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="31dp"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"/>

                <TextView
                    android:id="@+id/permission3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="개인정보 처리 방침 동의"
                    android:textColor="@color/gray800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="(필수)"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/gray800"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check4"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="31dp"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"/>

                <TextView
                    android:id="@+id/permission4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:text="선택적 정보 알림 수신 동의"
                    android:textColor="#D3D3D3"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="(선택)"
                    android:textColor="#D3D3D3"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/joinButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginEnd="12dp"
                android:background="@drawable/round_button_primary_color"
                android:text="회원가입 완료하기"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>