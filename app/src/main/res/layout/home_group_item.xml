<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_group_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
>

    <ImageView
        android:id="@+id/group_item_delete_btn_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_group_subtract" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_home_group_rounded_corner_orange"
        android:padding="15dp">

        <ImageView
            android:id="@+id/group_item_img_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_home_user_character1" />

        <LinearLayout
            android:id="@+id/group_item_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="GroupName"
                android:textSize="?attr/mainTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_item_description1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Description 1"
                android:textSize="?attr/mainTextSize"/>

            <TextView
                android:id="@+id/group_item_description2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Description 2"
                android:textSize="?attr/mainTextSize"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>